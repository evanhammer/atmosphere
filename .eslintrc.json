{
    "rules": {
        "indent": ["error", 2, {"SwitchCase": 1}],
        "quotes": ["error", "single"],
        "linebreak-style": ["error", "unix"],
        "semi": ["error", "always"],
        "max-len": ["warn", 80, 2],
        "no-console": ["error", {"allow": ["error"]}],
        "comma-dangle": ["error", "always-multiline"]
    },
    "parserOptions": {
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "env": {
        "browser": true,
        "es6": true,
        "node": true,
        "mocha": true
    },
    "plugins": [
        "react"
    ],
    "extends": ["eslint:recommended", "plugin:react/recommended", "standard"]
}
