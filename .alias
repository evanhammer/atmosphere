gsuper () { grep -nr --exclude=*.pyc --exclude=*.swp --color=tty $1 "$2" .; }
gr () { gsuper "" "$@"; }
cgr () { gsuper "--exclude-dir=.git --exclude-dir=venv" "$@"; }
lgr () { gsuper "" "$@" | l -R; }

