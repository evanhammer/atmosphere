#!/bin/zsh

# COMMANDS
alias a="ack"
alias v="code"
alias vi="code"
alias l="less"
alias c="cat"
alias ll="ls -lhG"
alias la="ls -lhaG"
alias ps="ps -aef | grep -i"
alias lc="ls --ignore=\"*.pyc\""
alias ls="ls -GF"
alias fp=" ps -aef | grep"

# DEV COMMANDS
alias gogo="foreman start"
alias goprod="foreman start --env=.prod.env"
alias gostage="foreman start --env=.staging.env"
alias godev="foreman start --env=.dev.env"
alias nrd="npm run deploy"

alias activate="source venv/bin/activate;"
alias strip="find . -name \*.pyc -delete"
alias stripreqs="pip freeze | xargs pip uninstall -y"

alias rtest="bundle exec rspec"

# GIT
alias g="git"
alias gst="git status"
alias gc="git commit"
alias co="git checkout"
alias gaa="git add -A"
alias gd="git diff"
alias gdc="git diff --cached"
alias gl="git lg"
alias gri="git rebase -i"
alias grc="git rebase --continue"
